<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_et">




            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/img_post"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="@id/card"
                />
            <TextView
                android:id="@+id/cardText"
                android:layout_width="255dp"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv1"
                app:layout_constraintStart_toStartOf="@id/iv1"
                android:text="Time to clean up the diet, keto paleo
carb-free breakfasting."
                android:fontFamily="@font/helvetica_neue"
                android:layout_marginLeft="10dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layC"
                android:layout_width="62dp"
                android:layout_height="27dp"
                app:layout_constraintTop_toTopOf="@id/cardText"
                app:layout_constraintEnd_toEndOf="@id/iv1"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="13.11dp"
                android:layout_height="13.11dp"
                app:layout_constraintTop_toTopOf="@id/layC"
                app:layout_constraintBottom_toBottomOf="@id/layC"
                app:layout_constraintStart_toStartOf="@id/layC"
                android:layout_marginStart="3dp"
                android:background="@drawable/ic_message" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv2"
                app:layout_constraintBottom_toBottomOf="@id/iv2"
                app:layout_constraintStart_toEndOf="@id/iv2"
                android:text="Order"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica_neue"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/ordRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardText"
                app:layout_constraintStart_toStartOf="@id/cardText"
                android:fontFamily="@font/helvetica_neue"
                android:textColor="@color/red"
                android:text="$20 "
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/ordDis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ordRate"
                app:layout_constraintStart_toEndOf="@id/ordRate"
                android:text="| 350 Meters"
                android:textColor="@color/grey"
                android:fontFamily="@font/helvetica_neue"/>
            
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="@id/ordRate"
                app:layout_constraintEnd_toEndOf="@id/ordDis"
                app:layout_constraintTop_toBottomOf="@id/ordDis"
                android:background="@color/grey"
                android:layout_marginTop="10dp"
                android:id="@+id/viewLine"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/viewLine"
                app:layout_constraintStart_toStartOf="@id/viewLine"
                android:src="@drawable/img_user"
                android:id="@+id/imgUser"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgUser"
                app:layout_constraintStart_toEndOf="@id/imgUser"
                android:text="Chawanun Peng"
                android:fontFamily="@font/helvetica_neue"
                android:textSize="11dp"
                android:textStyle="bold"
                android:id="@+id/uName"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/uName"
                app:layout_constraintStart_toStartOf="@id/uName"
                android:text="1 days ago"
                android:textSize="9dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/helvetica_neue"
                android:textColor="@color/grey"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/imgUser"
                app:layout_constraintBottom_toBottomOf="@id/imgUser"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_more"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>